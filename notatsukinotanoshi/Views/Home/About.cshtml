@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@section Styles{
    <environment include="Development">
        <link rel="stylesheet" href="~/css/about.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/about.min.css" />
    </environment>
}
@section HeadBanner{ 
    <header id="mainHeader" class="jumbotron">
        <div class="container text-right">
            <h2>@ViewData["Title"]</h2>
        </div>
    </header>
}
<div class="letter markdown-body" id="manifest">
    <pre>  
@Html.Raw(@ViewData["Message"])
    </pre>
</div>
<div class="text-center">
    <h1>@Localizer["You can save Japari Park!"]</h1>
    <div>
        <a class="btn btn-primary" href="https://discord.gg/pPJFRsH">@Localizer["Join our discord group!"]</a>
        <a class="btn btn-success" href="/Home/Index">@Localizer["Participate in our action!"]</a>
    </div>
</div>

<div class="bs-callout">
    <h4 class="text-center">@Localizer["Comments about us"]</h4>
    <div id="tweets"></div>
</div>

@section Scripts{ 
